{
  "[python]": {
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.tabCompletion": "on",
    "editor.defaultFormatter": "eeyore.yapf",
  },
  "yapf.args": [
    "--style",
    "{split_penalty_excess_character: 0, column_limit: 999, allow_split_before_dict_value: False, split_before_first_argument: True }"
  ],
  "files.associations": {
    "**/*.repo": "ini",
    "vlcrc": "ini",
    "org.videolan.vlc": "ini",
    "Vagrantfile": "ruby",
    "*.plist": "xml",
    "*.fwinfo": "jsonc",
    "*.ks": "shellscript",
    "Corefile": "caddyfile",
    "*.officeUI": "xml",
    "ignore": "ignore",
    "**/.grc/**/conf.*": "ini",
    "pins.h": "c",
    "system_error": "c",
    "array": "c",
    "functional": "c",
    "tuple": "c",
    "type_traits": "c",
    "utility": "c",
    "deque": "c",
    "string": "c",
    "unordered_map": "c",
    "vector": "c",
    "string_view": "c",
    "initializer_list": "c",
    "module.h": "c",
    "kernel.h": "c",
    "fs.h": "c",
    "init.h": "c",
    "uaccess.h": "c"
  },
  // TODO consider putting this onto select remote machines in ~/.vscode-server/data/Machine/settings.json?
}