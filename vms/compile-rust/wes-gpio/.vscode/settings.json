{
  "[python]": {
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.tabCompletion": "on",
    "editor.defaultFormatter": "eeyore.yapf",
  },
  "yapf.args": [
    "--style",
    "{split_penalty_excess_character: 0, column_limit: 999, allow_split_before_dict_value: False, split_before_first_argument: True }"
  ],
  "files.associations": {
    "**/*.repo": "ini",
    "vlcrc": "ini",
    "org.videolan.vlc": "ini",
    "Vagrantfile": "ruby",
    "*.plist": "xml",
    "*.fwinfo": "jsonc",
    "*.ks": "shellscript",
    "Corefile": "caddyfile",
    "*.officeUI": "xml",
    "ignore": "ignore",
    "**/.grc/**/conf.*": "ini",
    // project specific, linux headers treat as c code:
    "/usr/src/linux-headers-6.6.31+rpt-common-rpi/**/*.h": "c",
    "/usr/src/linux-headers-6.6.31+rpt-rpi-2712/**/*.h": "c",
  },
  // TODO consider putting this onto select remote machines in ~/.vscode-server/data/Machine/settings.json?
}