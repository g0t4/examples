<domain type='kvm'>
  <name>guestvm</name>
  <uuid>90084c22-fabc-4c54-ba23-d83cb858954a</uuid> <!-- adding this allows to call define w/o undefine first -->
  <memory unit='GiB'>16</memory>
  <cpu mode='host-passthrough'/>
  <vcpu placement='static'>8</vcpu> <!-- increase to 12? -->
  <os>
    <type arch='x86_64' machine='q35'>hvm</type>
    <loader readonly='yes' type='pflash'>/usr/share/OVMF/OVMF_CODE_4M.fd</loader>
    <nvram template='/usr/share/OVMF/OVMF_VARS_4M.fd'>/var/lib/libvirt/nvram/guestvm_VARS.fd</nvram>
    <!--<boot dev='hd'/> <boot dev='cdrom'/> --> <!-- don't use boot here with boot on devices too -->
  </os>
  <features>
    <acpi/>
    <apic/>
    <vmport state='off'/> <!-- not needed on b/c not vmware  -->
    <!-- <kvm><hidden state='on'/></kvm>  if need to hide virtualization signature from guest  -->
  </features>
  <clock offset='localtime'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
    <timer name='kvmclock' present='yes'/> <!-- kvm paravirt clock -->
  </clock>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>preserve</on_crash>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='/var/lib/libvirt/images/guestvm-primary.qcow2'/>
      <target dev='vda' bus='virtio'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x0'/>
      <boot order='1' />
    </disk>
    <disk type='file' device='disk'>
      <driver name='qemu' type='raw' />
      <source file='/var/lib/libvirt/boot/ubuntu-24.04.1-live-server-amd64.iso' />
      <target dev='vdb' bus='virtio' />
      <boot order='2' />
    </disk>
    <controller type='usb' model='qemu-xhci' ports='15'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x03' function='0x0'/>
    </controller>
    <controller type='pci' model='pcie-root'/>
    <interface type='network'>
      <mac address='52:54:00:6b:3c:58'/>
      <source network='default'/>
      <model type='virtio'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x0'/>
    </interface>
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <input type='tablet' bus='usb'/>
    <input type='keyboard' bus='ps2'/>
    <graphics type='vnc' port='5900' listen='0.0.0.0'/>
    <graphics type='spice' autoport='yes'>
      <listen type='none'/>
      <image compression='off'/>
    </graphics>
    <video>
      <model type='qxl' ram='65536' vram='65536' vgamem='16384' heads='1'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x02' function='0x0'/>
    </video>
    <channel type='spicevmc'>
      <target type='virtio' name='com.redhat.spice.0'/>
      <address type='virtio-serial' controller='0' bus='0' port='1'/>
    </channel>
    <redirdev bus='usb' type='spicevmc'>
      <address type='usb' bus='0' port='1'/>
    </redirdev>
    <memballoon model='virtio'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x06' function='0x0'/>
    </memballoon>
  </devices>
</domain>

